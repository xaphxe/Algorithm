<Window x:Class="_002_factorial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_002_factorial"
        mc:Ignorable="d"
        Title="Factorial" Height="450" Width="400">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="54,62,0,0" TextWrapping="Wrap" Text="다음 숫자의 팩토리얼을 계산!" VerticalAlignment="Top"/>
        <TextBox x:Name="txtData" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="54,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="계산" HorizontalAlignment="Left" Margin="200,108,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.744,-0.449" Width="71" Click="Button_Click"/>
        <ListBox x:Name="lstBox" HorizontalAlignment="Left" Height="232" Margin="54,154,0,0" VerticalAlignment="Top" Width="278" d:ItemsSource="{d:SampleData ItemCount=5}"/>

    </Grid>
</Window>
